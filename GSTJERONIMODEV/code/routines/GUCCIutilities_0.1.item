package routines;

import java.util.Date;

public class GUCCIutilities {
	// Format entry Date to String YYYYMMDD
	public static String formatDateYYYYMMDD(Date date) {
	    @SuppressWarnings("deprecation")
		String month = "" + (date.getMonth() + 1),
	        day = "" + date.getDate(),
	        year = "" + (date.getYear() + 1900);

	    if (month.length() < 2) 
	        month = "0" + month;
	    if (day.length() < 2) 
	        day = "0" + day;

	    return year + "" + month + "" + day;
	}
	// Round entry Double to 2 decimals
	public static String round2Double(Double amount) {
		return String.format("%.2f", amount);
	}
	
}